<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splashFragment">

    <!--Splash Fragment-->
    <fragment
        android:id="@+id/splashFragment"
        android:name="ir.mahan.ghabchin.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" />

    <!--Home Fragment-->
    <fragment
        android:id="@+id/homeFragment"
        android:name="ir.mahan.ghabchin.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <action
        android:id="@+id/actionToHome"
        app:destination="@id/homeFragment" />
    <!--Category Fragment-->
    <fragment
        android:id="@+id/categoryFragment"
        android:name="ir.mahan.ghabchin.ui.category.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category">
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <action
        android:id="@+id/actionToCategory"
        app:destination="@id/categoryFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="ir.mahan.ghabchin.ui.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <argument
            android:name="query"
            app:argType="string" />
    </fragment>
    <action
        android:id="@+id/actionToSearch"
        app:destination="@id/searchFragment" />


</navigation>