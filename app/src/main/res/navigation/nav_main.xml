<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splashFragment">

    <!--Splash Fragment-->
    <fragment
        android:id="@+id/splashFragment"
        android:name="ir.mahan.ghabchin.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" />

    <!--Home Fragment-->
    <fragment
        android:id="@+id/homeFragment"
        android:name="ir.mahan.ghabchin.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <action
        android:id="@+id/actionToHome"
        app:destination="@id/homeFragment" />

    <!--Category Fragment-->
    <fragment
        android:id="@+id/categoryFragment"
        android:name="ir.mahan.ghabchin.ui.category.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category">
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <action
        android:id="@+id/actionToCategory"
        app:destination="@id/categoryFragment" />

    <!--Search Fragment-->
    <fragment
        android:id="@+id/searchFragment"
        android:name="ir.mahan.ghabchin.ui.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <argument
            android:name="query"
            app:argType="string" />
    </fragment>
    <action
        android:id="@+id/actionToSearch"
        app:destination="@id/searchFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    <!--Detail Fragment-->
    <fragment
        android:id="@+id/detailFragment"
        android:name="ir.mahan.ghabchin.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="id"
            app:argType="string" />
        <action
            android:id="@+id/actionDetailToInfo"
            app:destination="@id/detailInfoFragment" />
    </fragment>
    <action
        android:id="@+id/actionToDetail"
        app:destination="@id/detailFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    <fragment
        android:id="@+id/detailInfoFragment"
        android:name="ir.mahan.ghabchin.ui.detail.info.DetailInfoFragment"
        android:label="fragment_detaail_info"
        tools:layout="@layout/fragment_detaail_info" >
        <argument
            android:name="data"
            app:argType="ir.mahan.ghabchin.data.model.detail.ResponseDetail" />
    </fragment>


</navigation>